<div class="container collection-view">
  <div class="section">
    <h4 class="white-text">{{tag}} collection</h4>
    <p class="grey-text text-lighten-3">Handpicked titles curated for this membership journey.</p>
  </div>

  <div class="row">
    {{#if books}}
      {{#each books}}
        <div class="col s12 m6 l4">
          <div class="card blue-grey darken-2">
            <div class="card-content white-text">
              <span class="card-title">{{title}}</span>
              <p class="author-name">{{authorName}}</p>
              <p class="reading-level">Reading level: {{readingLevel}}</p>
              <p>{{bookDescription}}</p>
              {{#if plans}}
                <p class="accessible-plans">Included in:
                  {{#each plans}}
                    <span class="chip teal lighten-1">{{name}} ({{PlanBookAccess.accessType}})</span>
                  {{/each}}
                </p>
              {{/if}}
            </div>
          </div>
        </div>
      {{/each}}
    {{else}}
      <div class="col s12">
        <div class="card grey darken-4">
          <div class="card-content white-text">
            <p>No titles currently available for this collection.</p>
          </div>
        </div>
      </div>
    {{/if}}
  </div>
</div>
