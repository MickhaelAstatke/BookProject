<div class="container plan-selection">
  <div class="section">
    <h4 class="white-text center-align">Choose the experience that fits your reading habits</h4>
    <p class="grey-text text-lighten-3 center-align">Flexible tiers, generous trials, and curated catalogues for every type of reader.</p>
  </div>

  <div class="row">
    {{#each plans}}
      <div class="col s12 m6 l4">
        <div class="card blue-grey darken-2">
          <div class="card-content white-text">
            <span class="card-title">{{name}}</span>
            <h5 class="plan-price">${{displayPrice}} / {{billingInterval}}</h5>
            {{#if trialDays}}
              <p class="trial-copy">Includes a {{trialDays}} day trial</p>
            {{/if}}
            <p class="plan-description">{{description}}</p>
            {{#if benefits}}
              <ul class="plan-benefits">
                {{#each benefits}}
                  <li><i class="material-icons tiny">check</i> {{label}}</li>
                {{/each}}
              </ul>
            {{/if}}
          </div>
          <div class="card-action">
            {{#if trialDays}}
              <form class="membership-action" data-membership-action="start-trial" data-plan-id="{{id}}">
                <button class="btn waves-effect waves-light teal lighten-1" type="submit">Start Trial</button>
              </form>
            {{/if}}
            <form class="membership-action" data-membership-action="activate" data-plan-id="{{id}}">
              <button class="btn waves-effect waves-light blue-grey lighten-1" type="submit">Activate Subscription</button>
            </form>
          </div>
        </div>
      </div>
    {{/each}}
  </div>

  {{#if featuredBooks}}
    <div class="section">
      <h5 class="white-text">Featured stories this month</h5>
      <div class="row">
        {{#each featuredBooks}}
          <div class="col s12 m6 l4">
            <div class="card grey darken-3 featured-book">
              <div class="card-content white-text">
                <span class="card-title">{{title}}</span>
                <p class="author-name">{{authorName}}</p>
                <p class="collection-tag">{{collectionTag}}</p>
                <p class="description">{{bookDescription}}</p>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  {{/if}}

  <div class="row">
    <div class="col s12">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text center-align">
          <span class="card-title">Curated for every reader</span>
          <p>Explore themed collections that unlock with each plan and discover premium-only chapters, author interviews, and guided reading journeys.</p>
        </div>
      </div>
    </div>
  </div>
</div>
